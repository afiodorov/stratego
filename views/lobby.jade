doctype 5
html
   head
      title Game Lobby
      link(type='text/css', media='all', rel='stylesheet', href='/pnotify/jquery.pnotify.default.css')
      //-link(type='text/css', media='all', rel='stylesheet', href='/pnotify/jquery.pnotify.default.icons.css')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
      link(type='text/css', media='all', rel='stylesheet', href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/themes/smoothness/jquery-ui.css')
      script(src="/src/knockout-3.0.0.js")
      script(src="/pnotify/jquery.pnotify.min.js")
      script(src="/src/socket.io.js")
      script(src="/src/lobbyutil.js")

   body
      .container
        p Name:
          input#playerName(type='text')
          input#__playerName(type='hidden')
          div#playerNameErr
          button#setPlayerName Set my name
        .players
          p List of online players
          ul#playersList
      .linksToGames
         ul#gamesList(data-bind='foreach: games')
           li#gameLi
             span#spanGame(data-bind='text: $index')
             span#opponentName(data-bind='text: opponentName')
